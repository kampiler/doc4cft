          qq("",                                       18)+//<REQ_MAN_DOC_DATE>
          qq("",                                       50)+//<REQ_MAN_DOC_TYPE                                >
          qq("",                                       17)+//<REQ_MAN_DOC_SER>
          qq("",                                       17)+//<REQ_MAN_DOC_NUM>
