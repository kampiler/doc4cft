macro del2crnl(s)
  var r=s;
  r=strsubst(r,"\n"," ");
  r=strsubst(r,"\x0A"," ");
  r=strsubst(r,"\x0C"," ");
  
  r=trim(r);
  return(r);
end;


macro cl4acc(account)
  var r="";
  file acc(account);
  acc.Account=account;
  if(geteq(acc))
    r=acc.Client;
  end;
  return r;
end;

macro nvl(k,v)
  var r=k;
  if(valtype(v)==V_UNDEF)
    v="0";
  end;
  if(trim(r)=="")
    r=v;
  end;
  return r;
end;

macro qq(s,n)
  if(n==0)
    return "";
  else
    return (evd_rz(string(s), n, " ", true));
  end;
end;

macro dmy(dt)
  var r="";
  if(valtype(dt)==V_DATE)
    r=string(dt:f);
    r=strsubst(r,".","/");
  end;
  return r;
end;

